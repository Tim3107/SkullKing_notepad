<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scully">

    <Button
        android:id="@+id/button_set_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="30dp"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <SeekBar
        android:id="@+id/seekBar2"
        style="@android:style/Widget.SeekBar"
        android:layout_width="182dp"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:max="3"
        android:progress="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.11" />

    <TextView
        android:id="@+id/seekbar_textview"
        android:layout_width="63dp"
        android:layout_height="39dp"
        android:layout_marginStart="175dp"
        android:text="6"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button_set_players"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar2"
        app:layout_constraintVertical_bias="0.289" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="270dp"
        android:layout_height="78dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/calligraffitti"
        android:text="How many pirates will join the battle?"
        android:textAlignment="center"
        android:textColor="#F3F3F3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_risky_zero"
        android:layout_width="152dp"
        android:layout_height="71dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="131dp"
        android:fontFamily="@font/calligraffitti"
        android:text="Risky Zero"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekbar_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>